<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dip"
    	android:layout_marginLeft="8dip"
    	android:layout_marginRight="8dip"
    	android:layout_alignParentTop="true">
    	
	    <TextView
	        android:id="@+id/btnReset"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="80dp"
	        android:text="Restart" 
	        android:textColor="@color/red"
	        android:textSize="24sp"/>
	    
	   <TextView 
	            android:id="@+id/lableScore"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="80dp"
	            android:textSize="24sp"
	            android:text="0" /> 
	            
    </RelativeLayout>"


	<FrameLayout
	    android:layout_width="280dip"
    	android:layout_height="280dip"
    	android:layout_marginTop="8dip"
    	android:layout_marginLeft="8dip"
    	android:layout_marginRight="8dip"
    	android:layout_centerInParent="true">
	  <RelativeLayout
	     	android:layout_width="match_parent"
		    android:layout_height="match_parent">
		     <TableLayout
		       android:id="@+id/tableMap"
		       android:layout_width="match_parent"
		       android:layout_height="match_parent"
		       android:background="@color/cornsilk"
		       android:layout_margin="2dp">
		        <TableRow
		            android:id="@+id/tableRow0"
		            style="@style/TableRowStyle">   
					<TextView 
			            android:id="@+id/txt_row0_column1"
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row0_column2" 
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row0_column3"
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row0_column4"
			            style="@style/TextMapNumber"/>        
		 		</TableRow>
		        <TableRow
		            android:id="@+id/tableRow1"
		        	style="@style/TableRowStyle">
		           <TextView 
			            android:id="@+id/txt_row1_column1"
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row1_column2" 
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row1_column3"
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row1_column4"
			            style="@style/TextMapNumber"/> 
		        </TableRow>
		        <TableRow
		            android:id="@+id/tableRow2"
		            style="@style/TableRowStyle">
		            <TextView 
			            android:id="@+id/txt_row2_column1"
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row2_column2" 
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row2_column3"
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row2_column4"
			            style="@style/TextMapNumber"/> 
		        </TableRow>
		        <TableRow
		            android:id="@+id/tableRow3"
		 			style="@style/TableRowStyle">
		           <TextView 
			            android:id="@+id/txt_row3_column1"
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row3_column2" 
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row3_column3"
			            style="@style/TextMapNumber"/> 
			        <TextView 
			            android:id="@+id/txt_row3_column4"
						style="@style/TextMapNumber"/>
		        </TableRow>
		    </TableLayout>
    </RelativeLayout>
 	<TextView 
      android:id="@+id/txtOver"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#e0000000"
      android:text="Game Over!"
      android:textSize="40sp"
      android:gravity="center"
      android:visibility="gone"/>
 	</FrameLayout>
        	
</RelativeLayout>