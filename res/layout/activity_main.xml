<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dip"
    	android:layout_marginLeft="8dip"
    	android:layout_marginRight="8dip">
	    <Button
	        android:id="@+id/btnStart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="80dp"
	        android:text="Start" />
	
	    <Button
	        android:id="@+id/btnReset"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="80dp"
	        android:text="Restart" />
	    
	   <TextView 
	            android:id="@+id/lableScore"
	            android:padding="3dip" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
	            android:textSize="14sp"/> 
	            
    </RelativeLayout>"

	<RelativeLayout 
	  	android:layout_width="match_parent"
    	android:layout_height="280dip"
    	android:layout_marginTop="20dip"
    	android:layout_marginLeft="8dip"
    	android:layout_marginRight="8dip">
	    
      <TableLayout
        android:id="@+id/tableMap"
        android:layout_width="280dip"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/cornsilk">
		
        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="280dp"
            android:layout_height="70dp" 
            android:layout_weight="1">
                 
			<TextView 
	            android:id="@+id/txt_row0_column1"
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row0_column2" 
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row0_column3"
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row0_column4"
	            style="@style/TextMapNumber"/> 
	            
 		</TableRow>
 		
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="280dp"
            android:layout_height="70dp" 
            android:layout_weight="1">
	        
           <TextView 
	            android:id="@+id/txt_row1_column1"
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row1_column2" 
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row1_column3"
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row1_column4"
	            style="@style/TextMapNumber"/> 
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="280dp"
            android:layout_height="70dp" 
            android:layout_weight="1">
	        
            <TextView 
	            android:id="@+id/txt_row2_column1"
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row2_column2" 
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row2_column3"
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row2_column4"
	            style="@style/TextMapNumber"/> 
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="280dp"
            android:layout_height="70dp" 
            android:layout_weight="1">
	        
           <TextView 
	            android:id="@+id/txt_row3_column1"
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row3_column2" 
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row3_column3"
	            style="@style/TextMapNumber"/> 
	        <TextView 
	            android:id="@+id/txt_row3_column4"
				style="@style/TextMapNumber"/>
        </TableRow>
    </TableLayout>
   </RelativeLayout>

	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="0dip"
    	android:layout_weight="1"
    	android:layout_marginTop="10dip"
    	android:layout_marginLeft="8dip"
    	android:layout_marginRight="8dip"
    	android:orientation="vertical">
      
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
              <Button
		          android:id="@+id/btnUP"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_centerInParent="true"
		          android:text="Up" />
	    </RelativeLayout>

    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">          
	    <Button
	        android:id="@+id/btnRight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="80dp"
	        android:text="Right" />
	
	    <Button
	        android:id="@+id/btnLeft"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="80dp"
	        android:text="Left" />
    
     </RelativeLayout>

    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">            
        <Button
	        android:id="@+id/btnDown"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="Down" />
	 </RelativeLayout>
	    


	</LinearLayout>

</LinearLayout>